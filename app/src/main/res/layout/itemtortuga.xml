<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/verde">

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintinStart_toStartOf="parent"
        app:layout_constraintintTop_toTopOf="parent"
        app:layout_constriantinBottom_toBottomOf="parent"
        app:layout_constriantEnd_toStartOf="@+id/guideline"/>

    <TextView
        android:id="@+id/txtArma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Espada"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        app:layout_constraintinStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"/>

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imagenxd"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/txtArma"
        app:layout_constraintintTop_toTopOf="parent"
        app:layout_constriantintTop_toTopOf="parent"
        app:layout_constriantinBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>