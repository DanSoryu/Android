<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal de la aplicación -->
    <style name="Theme.IntentsExIm" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza tu tema aquí -->
        <item name="colorPrimary">#6200EE</item> <!-- Morado -->
        <item name="colorPrimaryDark">#3700B3</item> <!-- Morado más oscuro -->
        <item name="colorAccent">#03DAC5</item> <!-- Verde agua -->

        <!-- Aplica el estilo personalizado a todos los botones -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="CustomButtonStyle">
        <item name="android:background">#6200EE</item> <!-- Fondo morado -->
        <item name="android:textColor">#FFFFFF</item> <!-- Texto blanco -->
        <item name="android:textSize">18sp</item> <!-- Tamaño de texto más grande -->
        <item name="android:padding">12dp</item> <!-- Espaciado dentro del botón -->
        <item name="android:layout_marginTop">8dp</item> <!-- Separación entre botones -->
        <item name="android:gravity">center</item> <!-- Centrar el texto -->
    </style>
</resources>



